{
   "default": "make",
   "make":
   {
      "project": "DashboardV2",
      "language": "C++",
      "type": "executable",
      "build": "../Build/DashboardV2/",
      "source": 
      [
         "../Source/DashboardV2/",
         "../Source/BaseIncludes/"
      ],
      "dependencies":
      [
         {
            "if": "OS=Windows",
            "then": "User32.lib"
         },
         {
            "if": "OS=Windows",
            "then": "Gdi32.lib"
         }
      ],
      "per-operations":
      [
         ["copy", "../Resources/logo.bmp", "[OUTPUT_DIRECTORY]/logo.bmp"],
         ["||", "../Resources/icon.ico", "[OUTPUT_DIRECTORY]/icon.ico"],
         ["||", "../Resources/home.bmp", "[OUTPUT_DIRECTORY]/home.bmp"],
         ["||", "../Resources/gear.bmp", "[OUTPUT_DIRECTORY]/gear.bmp"],
         ["||", "../Resources/arial.ttf", "[OUTPUT_DIRECTORY]/font.ttf"],
         ["||", "../Resources/dinosaur.bmp", "[OUTPUT_DIRECTORY]/dinosaur.bmp"],
         "build"
      ],
      "doesnt_work_dependencies":
      [
         {
            "if": "OS=Windows",
            "then": ["User32.lib", "Gdi32.lib"]
         }
      ],
      "DebugEnabled": "true",
      "optimized": false,
      "target": "all"
   }
}