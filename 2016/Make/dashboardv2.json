{
   "default": "make",
   "make":
   {
      "project": "DashboardV2",
      "language": "C++",
      "type": "executable",
      "build": "../Build/DashboardV2/",
      "source": 
      [
         "../Source/DashboardV2/",
         "../Source/BaseIncludes/"
      ],
      "dependencies":
      [
         {
            "if": "OS=Windows",
            "then": "User32.lib"
         },
         {
            "if": "OS=Windows",
            "then": "Gdi32.lib"
         }
      ],
      "per-operations":
      [
         ["copy", "../Resources/logo.bmp", "[OUTPUT_DIRECTORY]/logo.bmp"],
         ["copy", "../Resources/icon.ico", "[OUTPUT_DIRECTORY]/icon.ico"],
         ["copy", "../Resources/home.bmp", "[OUTPUT_DIRECTORY]/home.bmp"],
         "build"
      ],
      "doesnt_work_dependencies":
      [
         {
            "if": "OS=Windows",
            "then": ["User32.lib", "Gdi32.lib"]
         }
      ],
      "target": "all"
   }
}